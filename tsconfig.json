{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "maxNodeModuleJsDepth": 10,
        "allowJs": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.html"
    ],
    "exclude": [
        "node_modules"
    ]
}